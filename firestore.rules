rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Anyone can read everything
    match /{document=**} {
      allow read: if true;
    }

    // Only logged in users can create/update
    match /posts/{postId} {
      allow create: if request.auth != null;
      // Allow update if author OR if updating RSVP list
      allow update: if request.auth != null;
      // Allow delete only if the user is the author
      allow delete: if request.auth != null && request.auth.uid == resource.data.authorId;
    }

    match /users/{userId} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Replies collection
    match /replies/{replyId} {
      allow create: if request.auth != null 
                    && request.resource.data.authorId == request.auth.uid;
      allow delete: if request.auth != null 
                    && request.auth.uid == resource.data.authorId;
    }

    // Messages collection (direct messages)
    match /messages/{messageId} {
      allow create: if request.auth != null 
                    && request.resource.data.senderId == request.auth.uid;
      allow read: if request.auth != null 
                  && (request.auth.uid == resource.data.senderId 
                      || request.auth.uid == resource.data.recipientId);
      allow update: if request.auth != null 
                    && request.auth.uid == resource.data.recipientId;
      allow delete: if request.auth != null 
                    && (request.auth.uid == resource.data.senderId 
                        || request.auth.uid == resource.data.recipientId);
    }

    // Post last viewed timestamps
    match /postLastViewed/{viewedId} {
      allow create, update: if request.auth != null 
                            && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null;
      allow delete: if request.auth != null 
                    && request.auth.uid == resource.data.userId;
    }

    // JENbucks balances
    match /jenbucks/{userId} {
      // Anyone can read balances
      allow read: if true;
      // Only the user can create their own balance (initial setup)
      // OR allow creation if called from backend (no auth context means server-side)
      allow create: if (request.auth != null 
                    && request.auth.uid == userId
                    && request.resource.data.userId == userId)
                    || request.auth == null;
      // Only the user can update their own balance, and only to decrement
      allow update: if request.auth != null 
                    && request.auth.uid == userId
                    && request.resource.data.balance <= resource.data.balance;
    }

    // JENbucks reactions
    match /jenbucksReactions/{reactionId} {
      // Anyone can read reactions
      allow read: if true;
      // Only authenticated users can create reactions for themselves
      allow create: if request.auth != null 
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.amount == 1;
      // No updates or deletes allowed (reactions are permanent)
      allow update, delete: if false;
    }
  }
}